#!/bin/bash
# Copy relative file(s) given in argument to clipboard
# If no files are given, copy the current directory path

if [ $# -eq 0 ]; then
  text="."
else
  text=""
  for arg in "$@"; do
    rel_path="$arg"
    text+="$rel_path"$'\n'
  done
  # Remove trailing newline
  text="${text%$'\n'}"
fi

if [[ "$text" == *" "* ]]; then
  text="\"$text\""
fi

echo "$text"
printf "%s" "$text" | pbcopy
