#! python
# coding: utf-8

# Copy file given in argument in the clipboard
# If no files are given, copy the current directory path

import os
import sys

import pyperclip

first = 1
text = ""
if len(sys.argv) == 1:
    text = os.getcwd()
else:
    for arg in sys.argv:
        if first == 0:
            text += os.path.relpath(arg) + "\n"
        first = 0
    text = text[:-1]

if " " in text:
    text = '"' + text + '"'

print(text)
pyperclip.copy(text)
