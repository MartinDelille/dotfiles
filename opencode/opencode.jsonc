{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true,
    },
  },
  "formatter": {
    "qmlformat": {
      "command": ["qmlformat", "--inplace", "$FILE"],
      "extensions": [".qml"],
    },
    "cmake-format": {
      "command": ["cmake-format", "-i", "$FILE"],
      "extensions": [".cmake", "CMakeLists.txt"],
    },
  },
  "permission": {
    "bash": {
      "*": "allow",
      "git": "ask",
      "git diff": "allow",
      "git mv": "allow",
      "git log": "allow",
      "git show": "allow",
      "git status": "allow",
    },
  },
  "mcp": {
    //   "blender": {
    //     "enabled": true,
    //     "type": "local",
    //     "command": ["uvx", "blender-mcp"],
    //   },
  },
}
